<nav>
    <div class="nav-logo">
        {{ svg('nav/rocket.svg') }}
    </div>

    <div class="nav-title">
        <span>Odyssey</span>
    </div>

    <div class="nav-general">
        <a id="nav-home" href="/">Accueil</a>
        <a id="nav-getting-started" href="/getting-started">Getting started</a>
        <a id="nav-credits" href="/credits">Crédits</a>
    </div>

    <div class="nav-separator">
        {{ svg('nav/line.svg') }}
    </div>

    <div class="nav-user">
        {% if not userId is null %}
            <div class="nav-user-authenticated">
                <a id="nav-project-list" href="/project/list">Mes projets</a>
                <a id="nav-project-create" href="/project/new">Créer un projet</a>
            </div>
        {% endif %}

        <div class="nav-empty"></div>
        
        {% if userId is null %}
            <div class="nav-user-guest nav-right">
                <a id="nav-login" href="/user/login">Se connecter</a>
                <a id="nav-register" href="/user/register">S'inscrire</a>
            </div>
        {% endif %}

        {% if not userId is null %}
            <div class="nav-user-authenticated-name nav-right">
                <span id="nav-greeting">Bonjour <strong>{{ firstname }}</strong></span>
            </div>
        {% endif %}
    </div>
</nav>

<div id="nav-user-card" class="hidden">
    <h1>Votre compte</h1>

    <span id="nav-user-mail">{{ mail }}</span><br/>
    <span id="nav-user-name">{{ lastname }} {{ firstname }}</span><br/><br/>

    <a href="/user/logout">Se déconnecter</a>
</div>
